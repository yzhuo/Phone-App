<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_layout"

        >

        <include
            android:id="@+id/toolbar"
            layout="@layout/tool_bar">
        </include>

        <!-- search option -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_above="@+id/searchArea"
            android:background="@drawable/roundedbutton"
            >
            <Spinner
                android:id="@+id/options_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dropDownWidth="wrap_content"
                android:popupBackground="#70000000"
                />
        </LinearLayout>
        <!-- search criteria -->
        <LinearLayout
            android:id="@+id/searchArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:background="#80ffffff"
            >
            <EditText
                android:id="@+id/search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".99"
                android:layout_centerInParent="true"
                android:background="#80ffffff"
                android:hint="@string/search_by"
                android:textColorHint="#50000000"
                android:inputType="text|textAutoCorrect"
                android:imeOptions="actionSend"
                />

            <Button
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight=".01"
                android:layout_centerInParent="true"
                android:layout_alignRight="@+id/searchArea"
                android:id="@+id/clear"
                android:text="X"
                android:popupBackground="#70000000"
                />
        </LinearLayout>

        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/searchArea"
            android:background="@drawable/roundedbutton"
            android:textColor="#FFFFFF"
            android:text="@string/done"
            android:onClick="sendMessage"
            />
    </RelativeLayout>

    <!-- Content section -->

    <!-- Drawer Section. Recycler view - better list view, better memory management than list view-->
    <!-- check article on layout_width explicit values-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/drawer_recyclerView"
        android:layout_width="304dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:scrollbars="vertical"
        android:background="#ffffff"/>

</android.support.v4.widget.DrawerLayout>

